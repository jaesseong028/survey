@model UBSurvey.Models.UBSurveyInfo;
@{
    ViewData["Title"] = "Edit Page";
}

@section Scripts {
<environment include="Development">
    <script src="~/js/vue.min.js"></script>
</environment>
<environment include="Production">    
    <script src="~/js/vue.min.js"></script>
</environment>
<script src="~/js/axios.min.js"></script>
}


<div id="container" > 
    
        <table class="table table-bordered text-center">
            <tr>
                <td class="info">서비스명</td>
                <td colspan="3"><input type="text" class="form-control" ></td>
            </tr>
            <tr>
                <td class="info">제목</td>
                <td colspan="3"><input type="text" class="form-control" v-model="title" ></td>
            </tr>
            <tr>
                <td class="info" >배포기간</td>
                <td class="form-inline">
                    <input type="text" style="width:auto" class="form-control datepicker"  id="startDate"> ~
                    <input type="text" style="width:auto" class="form-control datepicker" id="endDate">
                </td>
                <td class="info" >마감인원</td>
                <td><input type="text" class="form-control " v-model="limitperson" ></td>
            </tr>
        </table>
        <div>
            <button class="btn btn-success" v-on:click="register"  >설문등록</button>
            <button class="btn btn-primary pull-right" v-on:click="save" >저장</button>
            <button class="btn btn-danger pull-right" v-on:click="deletesurvey">삭제</button>
        </div>
        <hr>
        <table class="table table-bordered text-center">
            <tr>
                <td class="info">URL</td>
                <td colspan="3" class="form-inline">
                        <input type="text" class="form-control">
                        <button class="btn btn-info pull-right ">복사</button>
                    </div>
                </td>

            </tr>
        </table>
</div>


<script type="text/javascript">
    var vue = new Vue({
        el: '#container',
        data : {
            title : '@Model.Title',
            limitperson : '@Model.LimitPersons'
            
        },
        mounted : function(){

            $("#startDate").datepicker({
                dateFormat: "yy-mm-dd"
            });

            $("#endDate").datepicker({
                dateFormat: "yy-mm-dd"
            });
        },
        methods : {
            deletesurvey : function(){
                alert('삭제');
            },
            save : function(){
                alert('저장');
            },
            register: function(){
                alert('설문등록');
            }

        }
        
         



    });


</script>

